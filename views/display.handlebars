<div class="container">
    <h1>
        Board Game Reviews
    </h1>
    <p>
        Quick comments on each game
    </p>
    <div class="row">
        <div class="col-8">
            {{#each game}}
            <div class="row gameRow" mongo_id={{this._id}}>
                <div class="col-3">
                    <img src="{{this.image}}" class="gameImage">
                </div>
                <div class="col-9">
                    {{!-- <a href="https://boardgamegeek.com/ + {{this.link}}"> --}}
                        {{this.name}}
                    {{!-- </a> --}}
                </div>
            </div>
            {{/each}}
        </div>
        <div class="col-4" id="noteSection">
            {{!-- Where comments will go --}}
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="js.js"></script>
